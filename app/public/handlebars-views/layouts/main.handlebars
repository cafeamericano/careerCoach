<!-- SCRIPTS ############################################################################################################################## -->

{{!-- Log Out Button --}}
<script>
    $(document).on("click", "#logoutButton", function () {
        localStorage.setItem('active-user', '')
        window.location.replace('/')
    });
</script>

<script>
    $.ajax({
        url: 'grabprofilephoto',
        method: "POST",
        data: {
            token: localStorage.getItem("active-user")
        }
    }).then(function (response) {
        console.log(response.profilePhotoURL)
        let profilePhoto
        if (response.profilePhotoURL === undefined) {
            profilePhoto = 'https://upload.wikimedia.org/wikipedia/commons/c/cd/Portrait_Placeholder_Square.png'
        } else {
            profilePhoto = response.profilePhotoURL
        }
        $('#profilePhoto').css('background-image', `url(${profilePhoto})`)
    })
</script>

