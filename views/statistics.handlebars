<div id='statsHolder'></div>

{{!-- Functions --}}
<script>
    function determineAvgConfidenceLevel(arr) {
        let x = 0;
        for (i = 0; i < arr.length; i++) {
            x += parseInt(arr[i].confidenceLevel)
        };
        return (x / (arr.length)).toFixed(1);
    }
</script>

{{!-- AJAX Calls --}}
<script>
    $.ajax({
        url: `/api/entries`,
        method: "GET"
    }).then(function (response) {
        console.log(response.data)
        $('#statsHolder').append(`Average Confidence Level: ${determineAvgConfidenceLevel(response.data)}`)
    })
</script>