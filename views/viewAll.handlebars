{{!-- Page-Specific Style --}}
<style>
    .inflated {
        transform: scale(1.1);
        transition: transform 250ms ease-in-out;
    }

    .deflated {
        transform: scale(1.0);
        transition: transform 250ms ease-in-out;
    }
</style>

{{!-- Content Control Buttons --}}
<div class='container-fluid'>
    <button id='y_ASC' class='btn btn-secondary mb-5 mr-2'>Sort by App Date
        Ascending</button>
    <button id='y_DESC' class='btn btn-secondary mb-5 mr-2'>Sort by App Date
        Descending</button>
    <button id='x_ASC' class='btn btn-secondary mb-5 mr-2'>Sort by Company Name
        Ascending</button>
    <button id='x_DESC' class='btn btn-secondary mb-5 mr-2'>Sort by Company Name
        Descending</button>
</div>

{{!-- Records Container --}}
<div class='container-fluid'>
    <div id='recordsContainer' class="row animated bounceInUp"></div>
</div>

{{!-- Functions --}}
<script>

    function grabEntries(specifiedSortAndFilter) {
        let query = `/api/entries/${specifiedSortAndFilter}`
        console.log(query)
        $.ajax({
            url: query,
            method: "GET"
        }).then(function (response) {
            console.log(response.data)
            drawAdvancedCards(response)
        })
    }

    function deleteEntry(id) {
        $.ajax({
            url: `/delete/process`,
            method: "POST",
            data: {
                id: id
            }
        }).then(function (response) {
            console.log(response)
            console.log('Sent delete request.')
        })
    }

    function pickColorFromClosureIndicator(status) {
        switch (status) {
            case 'Outstanding':
                return 'yellow';
            case 'Accepted':
                return 'rgb(122, 173, 62)'
            case 'Denied':
                return 'rgb(207, 86, 50)';
            case 'Withdrawn':
                return '#474747';
            case 'Never Responded':
                return 'rgb(207, 86, 50)';
            default:
                return 'gray';
        }
    }

    function drawAdvancedCards(response) {
        for (i = 0; i < response.data.length; i++) {
            $('#recordsContainer').append(
                `
                <div class="col-xl-4 col-lg-6 col-md-12">
                    <div class="card mb-3 deflated" style="max-width: 540px;">
                        <div class="row no-gutters">
                            <div class="col-md-1" style="background: ${pickColorFromClosureIndicator(response.data[i].closure)}"></div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">${response.data[i].companyName}</h5>
                                    <p class="card-text"><small class="text-muted">${response.data[i].applicationSubmissionDate}</small></p>
                                    <p class="card-text">${response.data[i].jobTitle}</p>
                                    <span class="card-text"><small class="text-muted">${response.data[i].progress}</small></span> | <span class="card-text"><small class="text-muted">${response.data[i].closure}</small></span>
                                </div>
                            </div>
                            <div class="col-md-4 text-right">
                                <form action="/edit_prompt" method="post">
                                    <input readonly style="display: none" type="text" name="id" value="${response.data[i]._id}">
                                    <button type="submit" class="btn">
                                        <i class="material-icons">view_quilt</i>
                                    </button>
                                </form>
                                <button id=${response.data[i]._id} class='btn deleteRecordButton'>
                                    <i class="material-icons">delete</i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                `
            )
        }
    }

</script>

{{!-- Event Listeners --}}
<script>

    // DELETE RECORD CLICK ##############################################

    //Fade out card when record deleted
    $(document).on('click', '.deleteRecordButton', function () {
        let idToDelete = $(this).attr('id')
        deleteEntry(idToDelete)
        $(this).parent().parent().parent().fadeOut()
    })

    // MOUSEOVER EFFECTS ################################################

    //Card mouseover effect
    $(document).on("mouseover", ".card", function () {
        $(this).removeClass('deflated');
        $(this).addClass('inflated');
    });

    //Card mouseout effect
    $(document).on("mouseout", ".card", function () {
        $(this).removeClass('inflated');
        $(this).addClass('deflated');
    });

    // SORTS ############################################################

    //Sort by Company Name Ascending
    $(document).on("click", "#x_ASC", function () {
        $('#recordsContainer').empty()
        grabEntries('companyName/ascending')
    });

    //Sort by Company Name Ascending
    $(document).on("click", "#x_DESC", function () {
        $('#recordsContainer').empty()
        grabEntries('companyName/descending')
    });

    //Sort by Company Name Ascending
    $(document).on("click", "#y_ASC", function () {
        $('#recordsContainer').empty()
        grabEntries('applicationSubmissionDate/ascending')
    });

    //Sort by Company Name Ascending
    $(document).on("click", "#y_DESC", function () {
        $('#recordsContainer').empty()
        grabEntries('applicationSubmissionDate/descending')
    });

</script>

{{!-- Run Program --}}
<script>
    grabEntries('applicationSubmissionDate/descending')
</script>